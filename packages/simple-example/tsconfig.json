{
    "compilerOptions": {
        "target": "ES5",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "alwaysStrict": true,
        "declaration": true,
        "downlevelIteration": true,
        "module": "CommonJS",
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "include": ["src/*", "old/*", "__tests__"]
}
